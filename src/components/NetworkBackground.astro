<!-- Animated network mesh background inspired by the original mostro.network -->
<div class="network-bg" aria-hidden="true">
  <div class="network-layer network-layer-1"></div>
  <div class="network-layer network-layer-2"></div>
</div>

<style>
  .network-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
  }

  .network-layer {
    position: absolute;
    width: 200%;
    height: 200%;
    background-image: url('/images/bg-pattern.svg');
    background-size: 912px auto;
    background-repeat: repeat;
    opacity: 0.4;
  }

  .network-layer-1 {
    top: -50%;
    left: -50%;
    animation: network-drift-1 120s linear infinite;
  }

  .network-layer-2 {
    top: -30%;
    left: -30%;
    animation: network-drift-2 160s linear infinite;
    opacity: 0.2;
    transform: scale(1.3) rotate(180deg);
  }

  @keyframes network-drift-1 {
    0% {
      transform: translate(0, 0) rotate(0deg);
    }
    25% {
      transform: translate(30px, -20px) rotate(1deg);
    }
    50% {
      transform: translate(-10px, 25px) rotate(-0.5deg);
    }
    75% {
      transform: translate(-25px, -15px) rotate(0.5deg);
    }
    100% {
      transform: translate(0, 0) rotate(0deg);
    }
  }

  @keyframes network-drift-2 {
    0% {
      transform: scale(1.3) rotate(180deg) translate(0, 0);
    }
    25% {
      transform: scale(1.3) rotate(181deg) translate(-20px, 15px);
    }
    50% {
      transform: scale(1.3) rotate(179.5deg) translate(15px, -20px);
    }
    75% {
      transform: scale(1.3) rotate(180.5deg) translate(20px, 10px);
    }
    100% {
      transform: scale(1.3) rotate(180deg) translate(0, 0);
    }
  }

  /* Reduce motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .network-layer-1,
    .network-layer-2 {
      animation: none;
    }
  }
</style>
